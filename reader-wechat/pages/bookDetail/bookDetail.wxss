/* pages/bookDetail/bookDetail.wxss */
.book-detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 图书基本信息 */
.book-header {
  background-color: white;
  padding: 30rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.book-publisher {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.book-isbn {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.book-meta {
  margin-bottom: 16rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.meta-label {
  color: #666;
  margin-right: 8rpx;
}

.meta-value {
  color: #333;
  flex: 1;
}

.meta-value.price {
  color: #ff4d4f;
  font-weight: 500;
}

.book-stock {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.stock-label {
  color: #666;
  margin-right: 8rpx;
}

.stock-value {
  color: #333;
  font-weight: 500;
}

.stock-value.available {
  color: #52c41a;
}

.stock-separator {
  margin: 0 12rpx;
  color: #999;
}

.book-status {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.status-tag.available {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.unavailable {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.borrow-count {
  font-size: 22rpx;
  color: #999;
}

/* 图书详情 */
.book-content {
  background-color: white;
  padding: 30rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-borrow {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.btn-reserve {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-color: #1989fa;
  color: #1989fa;
}

.btn-reserve::after {
  border-color: #1989fa;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  color: #999;
  font-size: 28rpx;
}