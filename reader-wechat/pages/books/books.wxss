/* pages/books/books.wxss */
.books-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 搜索栏 */
.search-bar {
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 72rpx;
  margin-right: 16rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
}

.search-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-item.active {
  background-color: #1989fa;
  color: white;
}

/* 排序栏 */
.sort-bar {
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.sort-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-options {
  display: flex;
  flex: 1;
}

.sort-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 32rpx;
}

.sort-item.active {
  color: #1989fa;
  font-weight: 500;
}

/* 图书列表 */
.books-list {
  padding: 0 20rpx;
}

.book-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.book-cover {
  width: 140rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.book-publisher {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.book-meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.book-category {
  font-size: 20rpx;
  color: #1989fa;
  background-color: #e6f7ff;
  padding: 2rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
}

.book-borrow-count {
  font-size: 20rpx;
  color: #999;
}

.book-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.status-tag.available {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.unavailable {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.book-price {
  font-size: 24rpx;
  font-weight: 500;
  color: #ff4d4f;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #1989fa;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载中 */
.loading-tip {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}