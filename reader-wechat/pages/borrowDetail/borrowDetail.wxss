/* pages/borrowDetail/borrowDetail.wxss */
.borrow-detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 借阅基本信息 */
.borrow-header {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  margin-right: 20rpx;
  min-width: 140rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.info-value.overdue {
  color: #ff4d4f;
  font-weight: 500;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
}

.status-tag.borrowed {
  background-color: #e6f7ff;
  color: #1989fa;
  border: 1rpx solid #91d5ff;
}

.status-tag.returned {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.overdue {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

/* 图书信息 */
.book-info {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.book-details {
  display: flex;
}

.book-cover {
  width: 160rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.book-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.book-publisher {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.book-isbn {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-renew {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  color: #999;
  font-size: 28rpx;
}