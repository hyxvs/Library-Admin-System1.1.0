/* pages/home/home.wxss */
.home-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 欢迎区 */
.welcome-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.welcome-content {
  flex: 1;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.sub-text {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-entry {
  background-color: white;
  margin: -20rpx 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  font-size: 40rpx;
}

.entry-text {
  font-size: 24rpx;
  color: #333;
}

/* 统计信息 */
.stats-section {
  padding: 0 20rpx 20rpx;
}

.stats-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 1rpx;
  background-color: #e8e8e8;
  margin: 0 10rpx;
}

/* 热门图书 */
.hot-books-section {
  padding: 0 20rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #1989fa;
}

.books-list {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.book-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.book-item:last-child {
  border-bottom: none;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.book-borrow-count {
  font-size: 20rpx;
  color: #999;
}

/* 公告信息 */
.announcement-section {
  padding: 0 20rpx 20rpx;
}

.announcement-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.announcement-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.announcement-content {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.announcement-time {
  font-size: 20rpx;
  color: #999;
  text-align: right;
}

/* 适配不同屏幕 */
@media (max-width: 375px) {
  .welcome-text {
    font-size: 32rpx;
  }
  
  .stat-value {
    font-size: 36rpx;
  }
  
  .book-cover {
    width: 100rpx;
    height: 140rpx;
  }
}