/* pages/profile/profile.wxss */
.profile-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.user-avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.user-reader-no {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
}

.user-email {
  font-size: 22rpx;
  opacity: 0.8;
  display: block;
}

/* 统计信息卡片 */
.stats-card {
  background-color: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.stats-content {
  display: flex;
  padding: 30rpx 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-divider {
  width: 1rpx;
  background-color: #f0f0f0;
  margin: 0 10rpx;
}

/* 功能菜单卡片 */
.menu-card {
  background-color: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.menu-content {
  /* 菜单内容 */
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-section {
  padding: 40rpx 20rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  border-color: #ff4d4f;
  background-color: white;
}

.btn-logout::after {
  border-color: #ff4d4f;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  color: #999;
  font-size: 28rpx;
}