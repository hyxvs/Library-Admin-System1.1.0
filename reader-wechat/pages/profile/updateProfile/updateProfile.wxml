<!-- pages/profile/updateProfile/updateProfile.wxml -->
<view class="update-profile-page">
  <view class="form-section">
    <view class="form-item">
      <text class="form-label">真实姓名</text>
      <input 
        class="form-input" 
        placeholder="请输入真实姓名" 
        value="{{formData.name}}" 
        bindinput="onInput"
        data-field="name"
      />
    </view>
    <view class="form-item">
      <text class="form-label">性别</text>
      <view class="gender-select">
        <view 
          class="gender-option {{formData.gender === 'male' ? 'active' : ''}}"
          bindtap="selectGender"
          data-gender="male"
        >
          男
        </view>
        <view 
          class="gender-option {{formData.gender === 'female' ? 'active' : ''}}"
          bindtap="selectGender"
          data-gender="female"
        >
          女
        </view>
      </view>
    </view>
    <view class="form-item">
      <text class="form-label">邮箱</text>
      <input 
        class="form-input" 
        placeholder="请输入邮箱" 
        value="{{formData.email}}" 
        bindinput="onInput"
        data-field="email"
      />
    </view>
    <view class="form-item">
      <text class="form-label">读者编号</text>
      <text class="form-value">{{userInfo && userInfo.reader_no ? userInfo.reader_no : ''}}</text>
    </view>
    <view class="form-item">
      <text class="form-label">身份证号</text>
      <text class="form-value">{{userInfo && userInfo.id_card ? userInfo.id_card : ''}}</text>
    </view>
  </view>

  <view class="form-actions">
    <button 
      class="btn-cancel" 
      type="default" 
      bindtap="cancel"
    >
      取消
    </button>
    <button 
      class="btn-save" 
      type="primary" 
      bindtap="save"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      保存
    </button>
  </view>
</view>