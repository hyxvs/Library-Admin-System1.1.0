/* pages/profile/updateProfile/updateProfile.wxss */
.update-profile-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 表单部分 */
.form-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  text-align: right;
}

/* 性别选择 */
.gender-select {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.gender-option {
  padding: 8rpx 32rpx;
  margin-left: 20rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.gender-option.active {
  border-color: #1989fa;
  color: #1989fa;
  background-color: #e6f7ff;
}

/* 操作按钮 */
.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
  border-color: #d9d9d9;
  color: #666;
}

.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.btn-cancel::after {
  border-color: #d9d9d9;
}