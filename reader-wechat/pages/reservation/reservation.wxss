/* pages/reservation/reservation.wxss */
.reservation-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: white;
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
}

.filter-item.active {
  color: #1989fa;
  border-bottom-color: #1989fa;
  font-weight: 500;
}

/* 预约列表 */
.reservation-list {
  padding: 20rpx;
}

.reservation-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.reservation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.reservation-no {
  font-size: 24rpx;
  color: #666;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.status-tag.pending {
  background-color: #e6f7ff;
  color: #1989fa;
  border: 1rpx solid #91d5ff;
}

.status-tag.completed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.cancelled {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #d9d9d9;
}

/* 图书信息 */
.book-info {
  display: flex;
  margin-bottom: 20rpx;
}

.book-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.reservation-dates {
  flex: 1;
}

.date-item {
  display: flex;
  font-size: 22rpx;
  margin-bottom: 4rpx;
}

.date-label {
  color: #999;
  margin-right: 8rpx;
  min-width: 100rpx;
}

.date-value {
  color: #333;
  flex: 1;
}

/* 操作按钮 */
.reservation-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-cancel {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  font-size: 24rpx;
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.btn-cancel::after {
  border-color: #ff4d4f;
}

.action-text {
  font-size: 24rpx;
  color: #999;
  line-height: 64rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #1989fa;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载中 */
.loading-tip {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}